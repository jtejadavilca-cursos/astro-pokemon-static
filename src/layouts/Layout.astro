---
import NavBar from '@components/shared/NavBar.astro';
import { ClientRouter } from 'astro:transitions';
import { siteInfo } from 'src/constants/site-info';


interface Props {
	title?: string;
	image?: string;
	description?: string;
}

const {title = siteInfo.title, description = siteInfo.description, image} = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO -->
		<meta name="description" content={description} />
		<meta name="author" content="Jose Tejada" />

		<!-- OG Metatags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />

		<title>{title}</title>

		<ClientRouter />
	</head>
	<body class="bg-slate-800 text-slate-100 ">
		<NavBar />
		<main class="mt-10 m-auto max-w-3xl mx-4 sm:mx-auto">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
